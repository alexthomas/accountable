<%= form_for @user, :html => { :class => "stacked form", :id => "#confirm_user_form" } do |f| %>
	<%= render :partial => 'accounts/users/password_form', :locals => {:f => f, :user => @user} %>
	<%= f.hidden_field :invite_code, :value => @invite_code ||= @user.invite_code %>
	<%= f.hidden_field :confirming, :value => true %>
	<div class="inner-actions">
		<%= f.submit "Confirm User", :class => 'btn primary'%>
	</div>
<% end %>